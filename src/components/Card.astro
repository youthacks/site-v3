---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div
  class="grid grid-cols-2 gap-8 rounded-xl border border-neutral-300 bg-white p-8 shadow-sm"
>
  <div>
    <slot name="title">
      <h2 class="font-satoshi text-3xl font-bold">
        {title}
      </h2>
    </slot>
  </div>
  <div>
    <slot />
  </div>
</div>
