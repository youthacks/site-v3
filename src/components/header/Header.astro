---
import { cva, type VariantProps } from "cva";
import Navbar from "~/components/navbar/Navbar.svelte";
import HeaderBackground from "./HeaderBackground.svelte";

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const header = cva({
  variants: {
    color: {
      pink: "bg-pink-200",
      red: "bg-red-200",
      amber: "bg-amber-200",
      emerald: "bg-emerald-200",
      cyan: "bg-cyan-200",
      blue: "bg-blue-200",
      neutral: "bg-neutral-200",
    },
  },
  defaultVariants: {
    color: "red",
  },
});

interface Props extends VariantProps<typeof header> {
  coverImage?: ImageMetadata;
  coverImageLabel?: string;
}
const { color, coverImage, coverImageLabel } = Astro.props;
---

<Navbar client:load />
<header
  class={header({
    color,
    class: "mb-6 relative isolate",
  })}
>
  {/* Navbar padding */}
  <div class="h-20"></div>

  <HeaderBackground color={color} client:idle />

  {
    coverImage ? (
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <div class="w-full px-8 py-16 max-lg:text-center lg:ml-auto lg:max-w-[calc(var(--container-7xl)_/_2)] lg:pr-4">
          <slot />
        </div>
        <div class="-mb-6 px-8 max-lg:h-80 lg:pt-8 lg:pl-4 lg:contain-size">
          <div class="relative h-full">
            <Image
              src={coverImage}
              alt="A large group of teenagers stood in front of the Raspberry Pi Foundation office"
              priority
              layout="full-width"
              quality="high"
              class="size-full rounded-xl object-cover object-center shadow-lg"
            />
            {coverImageLabel && (
              <div class="absolute inset-x-0 top-0 p-2">
                <div class="ml-auto flex h-7 max-w-fit items-center rounded-full bg-black/50 px-4 text-white backdrop-blur-sm">
                  <span class="truncate text-xs text-white">
                    {coverImageLabel}
                  </span>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    ) : (
      <div class="p-8 py-16 text-center">
        <slot />
      </div>
    )
  }
</header>
