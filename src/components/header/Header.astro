---
import { cva, type VariantProps } from "cva";
import Navbar from "./Navbar.svelte";
import HeaderBackground from "./HeaderBackground.svelte";

import { Image } from "astro:assets";
import hero from "~/assets/images/hero-scrapyard-cambridge.jpg";

const HEADER_LINKS = [
  { label: "Events", href: "/events" },
  { label: "Support us", href: "/donate" },
  { label: "Contact", href: "#contact" },
];

const header = cva({
  variants: {
    color: {
      red: "bg-red-200",
      amber: "bg-amber-200",
      cyan: "bg-cyan-200",
    },
  },
  defaultVariants: {
    color: "red",
  },
});

interface Props extends VariantProps<typeof header> {
  showCoverImage?: boolean;
}
const { color, showCoverImage } = Astro.props;
---

<Navbar links={HEADER_LINKS} client:load />
<header
  class={header({
    color,
    class: "mb-6 relative isolate",
  })}
>
  {/* Navbar padding */}
  <div class="h-20"></div>

  <HeaderBackground color={color} client:idle />

  {
    showCoverImage ? (
      <div class="grid grid-cols-2">
        <div>
          <div class="ml-auto max-w-[calc(var(--container-7xl)_/_2)] py-16 pr-4 pl-8">
            <slot />
          </div>
        </div>
        <div class="-mb-6 pt-8 pr-8 pl-4 contain-size">
          <div class="relative h-full">
            <Image
              src={hero}
              alt="A large group of teenagers stood in front of the Raspberry Pi Foundation office"
              class="size-full rounded-xl object-cover object-center shadow-lg"
            />
            <div class="absolute top-4 right-4 flex h-7 items-center rounded-full bg-black/50 px-4 text-white backdrop-blur-sm">
              <span class="text-xs text-white">
                Scrapyard Cambridge, at Raspberry Pi Foundation
              </span>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <div class="p-8 py-16 text-center">
        <slot />
      </div>
    )
  }
</header>
