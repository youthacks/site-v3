---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div
  class="grid grid-cols-1 gap-x-8 gap-y-4 rounded-xl border border-neutral-300 bg-white p-8 shadow-sm lg:grid-cols-2"
>
  <div>
    <slot name="title">
      <h2 class="font-satoshi text-2xl font-bold sm:text-3xl">
        {title}
      </h2>
    </slot>
  </div>
  <div>
    <slot />
  </div>
</div>
