  {
    name: "Matthew",
    role: "Co-founder, Organiser",
  },
  {
    name: "David",
    role: "Co-founder, Organiser",
    imageUrl: "https://avatars.githubusercontent.com/u/86719656?v=4",
  },
  {
    name: "Alfie",
    role: "Outreach, Organiser",
    imageUrl: "https://avatars.githubusercontent.com/u/46057382?v=4",
  },
  {
    name: "Delana",
    role: "Graphic design",
    imageUrl: "https://avatars.githubusercontent.com/u/188846221?v=4",
  },
  {
    name: "Esther",
    role: "Outreach",
  },
  {
