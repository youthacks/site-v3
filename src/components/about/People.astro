---

<section>
  <div class="mx-auto max-w-7xl p-8 text-center">
    <h2 class="font-satoshi text-2xl font-bold sm:text-3xl">Who we are</h2>
    <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        people.map((person) => (
          <div class="flex items-center gap-3 rounded-lg border border-gray-300 bg-white p-4 text-left shadow-sm">
            {person.imageUrl ? (
              <img
                src={person.imageUrl}
                alt={person.name}
                class="size-12 rounded-full"
              />
            ) : (
              <div class="grid size-12 place-items-center rounded-full bg-neutral-200">
                <LuUser class="size-6 text-neutral-400" />
              </div>
            )}
            <div>
              <h3 class="leading-snug font-semibold">{person.name}</h3>
              <p class="text-sm leading-snug text-gray-600">{person.role}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
