---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";

import Logo from "~/assets/logo/youthacks-logo.svg";
import SupportDoodle from "~/assets/scribbles/support-us-support.svg";
import UsDoodle from "~/assets/scribbles/support-us-us.svg";

import daydreamBanner from "~/assets/images/daydream/banner.png";
import daydreamLogo from "~/assets/images/daydream/temp-logo.png";

import coolAsHack from "~/assets/images/coolashack/image-2.jpg";
import scrapyardLon from "~/assets/images/scrapyard-lon/image-1.jpg";
import scrapyardCam from "~/assets/images/scrapyard-cam/image-1.jpg";
import counterspellCam from "~/assets/images/counterspell-cam/image-1.jpg";

import SiFacebook from "~/assets/icons/SiFacebook.svg";
import SiX from "~/assets/icons/SiX.svg";
import SiInstagram from "~/assets/icons/SiInstagram.svg";
import SiTiktok from "~/assets/icons/SiTiktok.svg";
import SiGithub from "~/assets/icons/SiGithub.svg";
import Card from "~/components/Card.astro";
---

<Layout>
  <div class="bg-dots bg-cyan-200">
    <nav class="flex items-center px-8 pt-8">
      <Logo class="h-8 w-auto" />
      <div class="flex-1"></div>
      <div class="flex items-center gap-2.5">
        <span class="font-semibold">Events</span>
        <span class="text-black/50">&middot;</span>
        <span class="font-semibold">Support us</span>
        <span class="text-black/50">&middot;</span>
        <span class="font-semibold">Contact</span>
      </div>
    </nav>
    <header class="p-8 py-16 text-center">
      <h1 class="font-satoshi text-6xl font-black tracking-tighter">
        <span class="relative isolate"
          >Support<SupportDoodle
            class="absolute inset-x-0 -bottom-2 -z-10 h-auto w-full translate-x-0.5"
          /></span
        >
        <span class="relative isolate">
          us
          <UsDoodle class="absolute top-4 -right-3 -z-10 h-auto w-3" />
        </span>
      </h1>
    </header>
  </div>
  <div class="mx-auto max-w-7xl space-y-12 p-8">
    <div class="space-y-6">
      <Card title="Volunteer">
        <div class="text-xl leading-normal text-neutral-800">
          <p>
            We're looking for passionate volunteers to help with our next
            events. If you’re over 18, can pass an enhanced DBS check, and love
            helping young people, we’d love to hear from you!
          </p>
          <p class="mt-1 font-semibold text-cyan-800">hello@example.com</p>
          <p class="mt-3 text-base text-neutral-600">
            <span class="font-semibold">Coming up:</span>
            Daydream, 27th-28th September 2025
          </p>
        </div>
      </Card>
      <Card title="Donate">
        <div class="text-xl leading-normal text-neutral-800">
          <p>
            Our events are always free to attend for young people. If you’re a
            company or individual who wants to have a meaningful impact on the
            next generation of makers, we’d love for you to get involved.
          </p>
          <p class="mt-1 font-semibold text-cyan-800">donate@example.com</p>
        </div>
      </Card>
    </div>

    {/* you could put a list of partners here! */}
  </div>
  <div class="flex justify-center gap-4 overflow-x-clip p-8 pt-4">
    <Image
      src={coolAsHack}
      alt=""
      class="aspect-video h-64 w-auto rounded-lg border border-neutral-300 object-cover shadow-sm odd:rotate-1 even:-rotate-1"
    />
    <Image
      src={scrapyardLon}
      alt=""
      class="aspect-video h-64 w-auto rounded-lg border border-neutral-300 object-cover shadow-sm odd:rotate-1 even:-rotate-1"
    />
    <Image
      src={scrapyardCam}
      alt=""
      class="aspect-video h-64 w-auto rounded-lg border border-neutral-300 object-cover shadow-sm odd:rotate-1 even:-rotate-1"
    />
    <Image
      src={counterspellCam}
      alt=""
      class="aspect-video h-64 w-auto rounded-lg border border-neutral-300 object-cover shadow-sm odd:rotate-1 even:-rotate-1"
    />
  </div>
  <footer class="bg-footer-dots bg-neutral-900 text-white">
    <div class="mx-auto max-w-7xl p-8">
      <div class="grid grid-cols-3 gap-8">
        <div>
          <Logo class="h-12 w-auto invert" />
        </div>
        <div>
          <h2 class="font-satoshi text-2xl font-bold">This site</h2>
          <div class="mt-2 space-y-1">
            <p
              class="text-lg text-neutral-400 underline-offset-2 transition hover:text-white hover:underline"
            >
              Our events
            </p>
            <p
              class="text-lg text-neutral-400 underline-offset-2 transition hover:text-white hover:underline"
            >
              Info for parents
            </p>
            <p
              class="text-lg text-neutral-400 underline-offset-2 transition hover:text-white hover:underline"
            >
              Support us
            </p>
            <p
              class="text-lg text-neutral-400 underline-offset-2 transition hover:text-white hover:underline"
            >
              Contact
            </p>
          </div>
        </div>
        <div>
          <h2 class="font-satoshi text-2xl font-bold">Social media</h2>
          <div class="mt-2 flex flex-wrap gap-2.5">
            <div
              class="group grid size-10 place-items-center rounded-full border border-neutral-700 transition hover:bg-neutral-800"
            >
              <SiFacebook
                class="size-4 text-white transition group-hover:scale-110"
              />
            </div>
            <div
              class="group grid size-10 place-items-center rounded-full border border-neutral-700 transition hover:bg-neutral-800"
            >
              <SiX class="size-4 text-white transition group-hover:scale-110" />
            </div>
            <div
              class="group grid size-10 place-items-center rounded-full border border-neutral-700 transition hover:bg-neutral-800"
            >
              <SiInstagram
                class="size-4 text-white transition group-hover:scale-110"
              />
            </div>
            <div
              class="group grid size-10 place-items-center rounded-full border border-neutral-700 transition hover:bg-neutral-800"
            >
              <SiTiktok
                class="size-4 text-white transition group-hover:scale-110"
              />
            </div>
            <div
              class="group grid size-10 place-items-center rounded-full border border-neutral-700 transition hover:bg-neutral-800"
            >
              <SiGithub
                class="size-4 text-white transition group-hover:scale-110"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="mt-8 flex justify-between border-t border-neutral-800 pt-4">
        <div class="text-sm text-neutral-500 italic">
          <p>© 2025 Youthacks. Registering for UK charity status.</p>
          <p>
            Fiscally sponsored by Hack Club, a 501(c)(3) nonprofit in the US.
          </p>
        </div>
        <div class="text-right text-sm text-neutral-500 italic">
          <p>photography by Edward Hesketh</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>
